{
  "name": "nuxt-fire-demo",
  "description": "Example project using nuxt-fire to integrate Firebase into a Nuxt project.",
  "author": "Pascal Luther",
  "license": "MIT",
  "repository": "https://github.com/lupas/nuxt-fire-demo",
  "homepage": "https://github.com/lupas",
  "keywords": [
    "nuxt",
    "firebase"
  ],
  "scripts": {
    "dev": "nuxt-ts",
    "build": "nuxt-ts build",
    "generate": "nuxt-ts generate",
    "start": "nuxt-ts start",
    "heroku-postbuild": "yarn run build",
    "deploy": "yarn run generate && firebase deploy --only hosting --project nuxt-fire-demo",
    "i:nuxt-fire:local": "yarn remove nuxt-fire && yarn add ../../_PUBLIC/nuxt-fire/packages/nuxt-fire",
    "i:nuxt-fire": "yarn remove nuxt-fire && yarn add nuxt-fire"
  },
  "dependencies": {
    "@nuxt/typescript-runtime": "^0.3.9",
    "@nuxtjs/vuetify": "^1.11.0",
    "core-js": "^2.6.10",
    "cross-env": "^7.0.0",
    "firebase": "^7.9.1",
    "firebase-admin": "^8.9.2",
    "jwt-decode": "^2.2.0",
    "node-fetch": "^2.6.0",
    "nuxt": "^2.10.2",
    "nuxt-fire": "../../_PUBLIC/nuxt-fire/packages/nuxt-fire",
    "vue-github-buttons": "^3.1.0"
  },
  "devDependencies": {
    "@nuxt/typescript-build": "^0.5.7",
    "@nuxtjs/eslint-config-typescript": "^1.0.2",
    "@vue/eslint-config-prettier": "^6.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-vuetify": "^1.0.0-beta.6",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1"
  }
}
