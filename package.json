{
  "name": "nuxt-fire-demo",
  "description": "Example project using nuxt-fire to integrate Firebase into a Nuxt project.",
  "author": "Pascal Luther",
  "license": "MIT",
  "repository": "https://github.com/lupas/nuxt-fire-demo",
  "homepage": "https://github.com/lupas",
  "keywords": [
    "nuxt, firebase"
  ],
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "heroku-postbuild": "npm run build",
    "deploy": "npm run generate && firebase deploy --only hosting --project nuxt-fire-demo",
    "i:nuxt-fire:local": "npm uninstall nuxt-fire && npm i ../../_PUBLIC/nuxt-fire/packages/nuxt-fire",
    "i:nuxt-fire": "npm uninstall nuxt-fire && npm i nuxt-fire"
  },
  "dependencies": {
    "@nuxtjs/vuetify": "^1.9.1",
    "babel-eslint": "^10.0.3",
    "core-js": "^2.6.10",
    "cross-env": "^6.0.3",
    "firebase": "^7.6.0",
    "firebase-admin": "^8.8.0",
    "jwt-decode": "^2.2.0",
    "node-fetch": "^2.6.0",
    "nuxt": "^2.10.2",
    "nuxt-fire": "file:../nuxt-fire/packages/nuxt-fire",
    "vue-github-buttons": "^3.1.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.2",
    "@nuxtjs/eslint-config": "^2.0.0",
    "@nuxtjs/eslint-module": "^1.1.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-nuxt": "^0.5.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-vuetify": "^1.0.0-beta.5",
    "prettier": "^1.19.1"
  }
}
